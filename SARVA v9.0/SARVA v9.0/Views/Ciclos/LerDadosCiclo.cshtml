@model IEnumerable<SARVA.Models.Ciclo>

@{
    ViewBag.Title = "Gerir Ciclos";
}

<h2 align="center">Tabela de Ciclos</h2>

<br />

<div align="center">
    @Html.ActionLink("Cadastrar Novo Ciclo", "AdicionarCiclo", "Ciclos")
</div>

<br />

<div align="center">
    <table class="table">
        <tr>
            <th>
                Nome do Ciclo
            </th>
            <th>
                Empresa
            </th>
            <th>
                Data de Início
            </th>
            <th>
                Data de Encerramento
            </th>
            <th>
                Opções
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.razao_social)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataFim)
                </td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("EditarCiclo","Ciclos", new { id = item.id })"><i class="bi bi-pencil-square"></i></a> |
                    <a class="btn btn-danger" onclick="return confirm('Tem certeza que deseja remover o ciclo ' + '@item.nome' + '?')" href="@Url.Action("RemoverCiclo","Ciclos", new { id = item.id, confirm = true })"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }

    </table>
</div>
