@model IEnumerable<SARVA.Models.Empresa>

@{
    ViewBag.Title = "LerDadosEmpresaAdmin";
}

<h2>LerDadosEmpresaAdmin</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.razao_social)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.flag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.userName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @if (item.flag == false)

        {
            <h3>Empresas Requisitadas</h3>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.razao_social)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.flag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.userName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
        else if (item.flag == true)
        {
            <h3>Empresas Habilitadas</h3>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.razao_social)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.flag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.userName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    }

</table>
