@model SARVA.Models.Cliente

@{
    ViewBag.Title = "Adicionar Cliente";
}

<link href="~/css/AdicionarClientestyle.css" rel="stylesheet" />

<div align="center">
    @using (Html.BeginForm())
    {
        <br />
        <br />
        <br />
        <br />
        


        <h2 style="color:white">Novo Cliente</h2>
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.id_usuario, htmlAttributes: new { Value = Session["idSS"] })

            <div class="form-group">
                @Html.LabelFor(model => model.nome, "Nome do Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="form-group">
                @Html.LabelFor(model => model.email, "Email para Contato", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="form-group">
                @Html.LabelFor(model => model.aniversario, "Data de Aniversário", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.EditorFor(model => model.aniversario, new { htmlAttributes = new { @class = "form-control", @placeholder = "dd/MM/yyyy", Value = String.Format("{0:dd/MM/yyyy}", DateTime.Now) } })
                    @Html.ValidationMessageFor(model => model.aniversario, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            @Html.HiddenFor(model => model.scoreId, htmlAttributes: new { Value = 3 }) <!-- PADRÃO: SCORE NEUTRO -->

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Adicionar Novo Cliente" class="btn btn-light" />
                </div>
            </div>
        </div>
    }
</div>

<br />

<div align="center">
    @Html.ActionLink("Voltar", "LerDadosCliente", "Clientes", htmlAttributes: new {@class = "btn btn-warning" })
</div>
